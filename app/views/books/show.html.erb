<h2>Details about <em><%= @book.title %></em></h2>

<ul id="details">
  <li>
    Rating:
    <%= @book.rating %>
  </li>
  <li>
    Author:
    <%= @book.author %>
  </li>
  <li>
    Published in:
    <%= @book.publish_date.strftime("%B %d, %Y") %>
  </li>
</ul>

<h3>Description:</h3>
<p id="description">
  <%= @book.description %>
</p>

<div class="row">
  <%= link_to 'Edit', edit_book_path(@book), :class => 'btn btn-primary col-2' %>
  <%= link_to 'Delete', book_path(@book), 'data-method' => 'delete', 'data-confirm' => 'Are you sure?', :class => 'btn btn-danger col-2' %>
  <%= link_to 'Back to book list', books_path, :class => 'btn btn-primary col-2' %>
  <%= link_to 'Find Books With Same Author', same_author_books_path(@book) %>
</div>
